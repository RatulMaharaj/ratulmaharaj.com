---
import ThemeToggle from "./ThemeToggle.astro";

const url = new URL(Astro.request.url);
---

<header class="flex items-center pb-10">
  <a
    href="/"
    class="text-lg"
    aria-current={url.pathname === "/" ? "page" : false}
  >
    <h1 class="group font-medium">
      <span class="transition-all duration-0">Ratuls</span><span class="text-gray-300 group-hover:text-gray-400 transition-all duration-300">[</span><span
        class="text-gray-300 group-hover:text-primary transition-all duration-300">'</span
      ><span class="text-surface-content/50 group-hover:text-primary transition-all duration-300">Blog</span><span
        class="text-gray-300 group-hover:text-primary transition-all duration-300">'</span
      ><span class="text-gray-300 group-hover:text-gray-400 transition-all duration-300">]</span>
    </h1>
  </a>
  <ThemeToggle />
</header>
